<h1>Listing all articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
  <% @articles.each do |a| %>
    <tr>
      <td><%= a.title %></td>
      <td><%= a.description %></td>
      <td><%= link_to 'Show', article_path(a.id) %></td>
      <td><%= link_to 'Edit', edit_article_path(a.id) %></td>
    </tr>
  <% end %>
</table>
