<div class='container users-show-pageContent'>
  <h2 class='page-header center-in-block'>Welcome to <%= @user.username %>'s page</h2>
  <div class='row'>
    <div class='col-md-4 col-md-offset-4 center-in-block'>
      <%= gravatar_for @user, size: 150 %>
    </div>
  </div>
  <br />
  <div class='row'>
    <div class='col-sm-4 col-sm-offset-4 center-in-block'>
      Email: <%= @user.email %>
    </div>
  </div>
  <div class='row'>
    <div class='col-sm-6 col-sm-offset-3 center-in-block'>
      <h4><%= @user.username %>'s articles</h4>
    </div>
  </div>
  <div class='center-in-block'>
    <%= will_paginate @articles %>
  </div>
  <div class='row'>
    <div class='col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1'>
      <% if @articles.length == 0 %>
        <h4 class='center-in-block'>
          There are no articles to show. <%= link_to 'Create the first article!', new_article_path %>
        </h4>
      <% end %>
      <%= render 'articles/articles_listing', obj: @articles %>
    </div>
  </div>
  <div class='center-in-block'>
    <%= will_paginate @articles %>
  </div>
</div>
