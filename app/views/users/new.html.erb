<% if @user.errors.any? %>
<div class='row flash-message-wrapper'>
  <div class='form-error-messages col-sm-offset-1 col-sm-9'>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class='col-sm-1 exit-flash-message'>
    <span class='glyphicon glyphicon-remove'></span>
  </div>
</div>
<% end %>

<%= form_for @user do |f| %>
<div class='row'>
  <div class='form-group col-sm-6 col-sm-offset-1'>
      <%= f.label :username %><br />
      <%= f.text_field :username, :autofocus => true, :class => 'form-control' %>
  </div>
</div>
<div class="row">
  <div class="form-group col-sm-6 col-sm-offset-1">
    <%= f.label :email %><br />
    <%= f.email_field :email, :class => 'form-control' %>
  </div>
</div>
<div class="row">
  <div class="form-group col-sm-6 col-sm-offset-1">
    <%= f.label :password %><br />
    <%= f.password_field :password, placeholder: "Enter password", class: 'form-control' %>
  </div>
</div>

<div class='row'>
  <div class='col-sm-12 col-sm-offset-1'>
    <%= f.submit "Sign up", :class => 'btn btn-primary btn-lg' %>
  </div>
</div>
<% end %>
