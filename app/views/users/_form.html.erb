<%= form_for @user do |f| %>
  <div class='form-group'>
      <%= f.label :username %>
      <%= f.text_field :username, :class => 'form-control autofocussed' %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "Enter password", class: 'form-control' %>
  </div>

  <div class='users-formSubmitButton'>
    <%= f.submit @action, :class => 'btn btn-primary' %>
  </div>
<% end %>
