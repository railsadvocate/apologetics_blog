<div class='users-signUpForm'>
  <h2 class='page-header'>Log in</h2>
  <%= form_for :session, url: login_path do |f| %>
    <div class='form-group'>
        <%= f.label :email %><br />
        <%= f.text_field :email, placeholder: 'Enter email', :autofocus => true, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password %><br />
      <%= f.password_field :password, placeholder: "Enter password", autocomplete: 'off', class: 'form-control' %>
    </div>
    <p>
      Don't have an account? <%= link_to 'Sign up!', signup_path %>
    </p>
    <div>
      <%= f.submit @action, :class => 'btn btn-primary' %>
    </div>
  <% end %>
</div>
<br />
<br />
<div class='exit-form-wrapper'>
  <%= link_to "[ Exit and return to article listings ]", articles_path %>
</div>
